{
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=lcov"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/static/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/static/js/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleDirectories": ["node_modules", "static/js"]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.1"
  }
}